@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "エラー";
}

<h2 class="text-danger">エラーページのスペアです</h2>

<table class="table">
    <tr>
        <th>発生元</th>
        <td>@Model.ControllerName</td>
    </tr>
    <tr>
        <th>例外</th>
        <td>@Model.Exception.GetType().Name</td>
    </tr>
    <tr>
        <th>メッセージ</th>
        <td>@Model.Exception.Message</td>
    </tr>
</table>